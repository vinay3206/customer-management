{{#link-to 'customer.add' tagName="button" class="btn btn-primary pull-right margin-bottom-10"}}Add New customer{{/link-to}}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |customer index|}}
          <tr>
              <th scope="row">{{increment index}}</th>
              <td>{{customer.name}}</td>
              <td>{{customer.mobile}}</td>
              <td>{{customer.phone}}</td>
              <td>{{customer.email}}</td>
              <td>{{customer.addressesString}}</td>
              <td>{{#link-to 'customer.edit' customer}}Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>{{/link-to}}</td>
              <td><a href="#"  data-toggle="modal" data-target=".dataviewdelete" {{action "setDelete" customer.id}}> Delete <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
          </tr>
        {{/each}}
      </tbody>
</table>

<div class="modal fade dataviewdelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog center-align">
      <div class="modal-content">
        <div class="modal-body">
            Are you sure you want to delete the session?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default t_deletecancel" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary t_deleteok" data-dismiss="modal"{{action "delete"}}>Ok</button>
        </div>
      </div>
    </div>
</div>
